<Window x:Class="TS_PEACE_Client.Windows.loadingwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TS_PEACE_Client.Windows"
        mc:Ignorable="d"
        Title="loadingwindow" Height="450" Width="800"
        Background="DimGray"
        ResizeMode="NoResize">
    <!--Grid to display loading text and loading bar-->
    <Grid>

        <Label Content="LOADING .... " FontFamily="Avara" FontSize="60" VerticalAlignment="Top"  HorizontalAlignment="Center" Margin="0,133,0,0" Foreground="Black" />

        <ProgressBar  Name="MyProgressBar"  Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="464"  IsIndeterminate="True" Margin="0,248,0,0" />

    </Grid>
</Window>
